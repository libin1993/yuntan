<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.8"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp"
    swipe:clickToClose="true">

    <LinearLayout
        android:tag="Bottom2"
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/add_to_localtion"
            android:src="@drawable/icon_0000s_0000s_0002_location"
            android:layout_width="60dp"
            android:background="#4cd964"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_height="60dp" />
        <ImageView
            android:id="@+id/add_to_black"
            android:src="@drawable/icon_0000s_0002s_0005_user"
            android:layout_width="60dp"
            android:background="@drawable/red"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutItemText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/black">

        <TextView
            android:padding="2dp"
            android:id="@+id/position"
            android:layout_marginStart="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:text="1."
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <TextView
            android:padding="2dp"
            android:id="@+id/tvUeidItemText"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:tag="Hover"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/black_warn"
            android:src="@drawable/ueid_arrowhead"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            />

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>