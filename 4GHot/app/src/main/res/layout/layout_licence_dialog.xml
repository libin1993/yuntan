<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:alpha="0.9"
    android:background="@color/black"
    android:paddingTop="22dp"
    android:paddingBottom="22dp"
    android:paddingStart="26dp"
    android:paddingEnd="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/authorize_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="@string/due_time"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvDueTime"
            android:layout_width="200dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_height="32dp"
            android:textColor="@color/white"
            android:background="@drawable/common_edit_text_bkg"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textCursorDrawable="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/machine_id" />

        <TextView
            android:id="@+id/tvMachineId"
            android:layout_width="200dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_height="32dp"
            android:textColor="@color/white"
            android:background="@drawable/common_edit_text_bkg"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textCursorDrawable="@null"
            android:textIsSelectable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="@string/authorize_code" />

        <EditText
            android:id="@+id/etAuthorizeCode"
            android:layout_width="160dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:background="@drawable/common_edit_text_bkg"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/iv_scan_code"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_scan"
            android:scaleType="fitCenter"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btCancel"
            android:layout_height="36dp"
            android:textColor="@color/darkorange"
            android:background="@drawable/common_button_bkg"
            android:layout_width="88dp"

            android:text="@string/cancel" />
        <Button
            android:id="@+id/btAuthorize"
            android:layout_height="36dp"
            android:textColor="@color/darkorange"
            android:background="@drawable/common_button_bkg"
            android:layout_width="88dp"
            android:text="@string/authorize"
            android:layout_marginStart="18dp"/>


    </LinearLayout>
</LinearLayout>