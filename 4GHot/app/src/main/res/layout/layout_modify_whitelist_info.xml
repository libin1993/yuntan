<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:alpha="0.9"
    android:background="@color/black"
    android:paddingTop="12dp"
    android:paddingBottom="18dp"
    android:paddingStart="40dp"
    android:paddingEnd="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:text="@string/modify_whitelist"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/dialog_label"
            android:text="@string/lab_msisdn" />

        <EditText
            android:id="@+id/etMsisdn"
            style="@style/dialog_edit"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:digits="@string/account_rule" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/dialog_label"
            android:text="@string/lab_imsi" />

        <EditText
            android:id="@+id/etImsi"
            style="@style/dialog_edit"
            android:singleLine="true"
            android:maxLength="15"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:digits="@string/account_rule" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/dialog_label"
            android:text="@string/user_remake2" />

        <EditText
            android:id="@+id/etRemark"
            style="@style/dialog_edit"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:maxLength="8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:orientation="horizontal">



        <Button
            android:id="@+id/btCancel"
            android:layout_height="36dp"
            android:textColor="@color/darkorange"
            android:background="@drawable/common_button_bkg"
            android:layout_width="88dp"
            android:text="@string/cancel" />


        <Button
            android:id="@+id/btSave"
            android:layout_height="36dp"
            android:textColor="@color/darkorange"
            android:background="@drawable/common_button_bkg"
            android:layout_width="88dp"
            android:text="@string/save"
            android:layout_marginStart="18dp"/>
    </LinearLayout>
</LinearLayout>