<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>

    <ListView
        android:id="@+id/lvUserInfo"
        android:background="@drawable/ueid_bkg"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/scrollbar_style"
        android:divider="@drawable/comman_listview_divider"
        android:dividerHeight="0.6dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/dimgrey"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom"
        android:gravity="center">

        <Button
            android:id="@+id/btAddUser"
            android:layout_height="34dp"
            android:layout_width="wrap_content"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textSize="14sp"
            android:textColor="@color/darkorange"
            android:background="@drawable/common_button_bkg"
            android:text="@string/add_user" />

        <Button
            android:id="@+id/btModifyAdmin"
            android:layout_height="34dp"
            android:layout_width="wrap_content"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:textSize="14sp"
            android:textColor="@color/darkorange"
            android:layout_marginStart="10dp"
            android:background="@drawable/common_button_bkg"
            android:text="@string/modify_admin" />
    </LinearLayout>
</LinearLayout>
